<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3b3b3e">

    <LinearLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_backtomain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_white_18dp"
            android:background="@drawable/click_button_style"/>

        <View
            android:layout_width="0.8dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="#2b2b2b"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="餐餐抢"
            android:textSize="18dp"/>

    </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/ic_timer_auto_white_48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#e1e1e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_grey600_36dp"
            android:background="@drawable/click_button_style"/>

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#e1e1e1"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_button_light_style"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#252525"
            android:text="餐餐券"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15.5dp"/>

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#e1e1e1"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_button_light_style"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#252525"
            android:text="订单中心"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15.5dp"/>

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#e1e1e1"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_button_light_style"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#252525"
            android:text="会员福利"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15.5dp"/>


    </LinearLayout>

    </LinearLayout>

</RelativeLayout>